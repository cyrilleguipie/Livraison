<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"

    android:background="@color/md_blue_grey_50"

    tools:ignore="UnusedResources"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bleu"
      android:padding="5dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="18sp"
        android:fontFamily="@font/regular"
        android:layout_marginLeft="10dp"
        android:id="@+id/label_title"
        />
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

      <TextView
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:text="Qui a receptionne la commande ?"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#000"
          android:fontFamily="@font/regular"
          android:textSize="17sp"
          />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spin_reception"
        android:entries="@array/array_reception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SpinnerStyle.Underlined"
        />
      <Button
          android:id="@+id/btn_ok"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rectangle_round_red"
          android:text="Confirmer la livraison"
          android:textColor="#fff"
          android:fontFamily="@font/bold"
          android:layout_margin="10dp"
          />
    </LinearLayout>



</LinearLayout>